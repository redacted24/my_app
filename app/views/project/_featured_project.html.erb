<a href="<%= url %>" class="no-color-a">
  <div class="mb-l exp-item">
    <div class="exp-name mb-m">
      <%= name %>
      <% if opensource %>
        <div class="open-source-text">
          open source
        </div>
      <% else %>
        <div class="closed-source-text">
          closed source
        </div>
      <% end %>
    </div>
    <% if preview_image_link != "" %>
      <div class="project_preview_img">
        <%= image_tag(preview_image_link) %>
      </div>
    <% end %>
    <div class="exp-description mb-m">
      <%= description %>
    </div>
    <div class="tag-container">
      <% for tag in tags do %>
        <div class="tag">
          <%= tag %>
        </div>
      <% end %>
    </div>
  </div>
</a>
